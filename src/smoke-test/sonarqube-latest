FROM sonarqube:8.6-community
ENV SONAR_JAVA_VERSION=6.9.0.23563

RUN (cd $SONARQUBE_HOME/extensions/plugins/ && wget -q https://repo.maven.apache.org/maven2/org/sonarsource/java/sonar-java-plugin/$SONAR_JAVA_VERSION/sonar-java-plugin-$SONAR_JAVA_VERSION.jar)
COPY target/sonar-findbugs-plugin.jar $SONARQUBE_HOME/extensions/plugins/
